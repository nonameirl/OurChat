<Page
    x:Class="OurChat.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OurChat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Opacity="100">
        <Image x:Name="logonBg" Source="Assets/SplashScreen.png" Stretch="UniformToFill" Margin="0,-26,0,0"/>
        <Border BorderThickness="1" VerticalAlignment="Top" Margin="0,-26,0,0" Background="#FF62768B" MinHeight="23.5" Height="27"/>
        <TextBlock x:ConnectionId='1' x:Name="loginName" TextWrapping="Wrap" VerticalAlignment="Top" Margin="110,63,110,0"                                               FontSize="72" FontFamily="Assets/fonts/BuxtonSketch.ttf#Buxton Sketch" Foreground="#FF040C13" Height="72" CharacterSpacing="-95" FontWeight="Black" TextAlignment="Center" Text="OurChat" Width="180" HorizontalAlignment="Center"/>
        <TextBlock x:Name="slogan" Margin="111,124,108,0" TextWrapping="Wrap" Text="Meeting people through video" Foreground="#FF040C13" FontFamily="Assets/fonts/Andy.ttf#HW Andy" FontSize="16" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" Width="181"/>
        <Button x:ConnectionId='2' x:Name="RegisterBtn" Content="Register" HorizontalAlignment="Stretch" Margin="139,280,139,0" VerticalAlignment="Top" RenderTransformOrigin="-0.031,0" Width="122"                      FontSize="14" Height="53" BorderBrush="{x:Null}" Background="#FF667E91"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Stretch" Margin="139,241,139,0" VerticalAlignment="Top" Width="122" Background="#FF3F4B4F" BorderBrush="{x:Null}" FontSize="14"/>
    </Grid>
</Page>

